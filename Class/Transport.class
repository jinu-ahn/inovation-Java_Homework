package org.example;

import java.util.HashMap;
import java.util.Map;
import java.util.Scanner;

public class transport {
    public int number, people, change_number;
    public int speed = 10;
    public int oil = 100;
    public int max_people;
    Map<Integer,String> bus_Map = new HashMap<Integer,String>();
    Map<Integer,String> taxi_Map = new HashMap<Integer,String>();
    Scanner sc = new Scanner(System.in);
    
    public void set_number(int number) {
        this.number = number;
    }
    
    public int get_number() {
        return this.number;
    }

    // Value값으로 Key 값 찾기
    public <Integer, String> Integer getKey(Map<Integer, String> map, String value) {

        for (Integer key : map.keySet()) {
            if (value.equals(map.get(key))) {
                return key;
            }
        }
        return null;
    }
    
    // 속도
    public int Speed(int speed) {
        return this.speed += speed;

    }
    
    // 기름
    public int Oil(int oil) {
        if(this.oil + oil < 10){
            System.out.println("주유가 필요합니다.");
            return this.oil += oil;
        }
        else if(this.oil+oil > 100) {
            System.out.println("기름은 100을 넘어갈 수 없습니다.");
            return this.oil = 100;
        }
        else
            return this.oil += oil;
    }

}
